{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "outDir": "./dist"
  },
  "include": [
    "src",
    "tests",
    "e2e",
    "vite.config.ts",
    "tailwind.config.ts",
    "vitest.config.ts",
    "playwright.config.ts"
  ]
}
